{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "(SPG) C/C++: cl.exe build active file with SDL2",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                // Define standard, cl.exe uses by default in c++14
                "/std:c++17",
                // Includes, here add all relevant include directories
                "/I${workspaceFolder}",
                "/I${workspaceFolder}\\lib\\SDL2-2.30.0\\include",
                "/I${workspaceFolder}\\lib\\SDL2_image-2.8.2\\include",
                // Fe - specify generated executable file, specifying directory uses
                // the base name of the first source or object file specified on
                // the command line
                "/Fe${workspaceFolder}\\build\\",
                // Fo - specify object file name (naming rule same as above)
                "/Fo${workspaceFolder}\\build\\",
                // Fd - specify program database (PDB) file name (naming rule same as above)
                "/Fd${workspaceFolder}\\build\\",
                // Input source file (current open file)
                "${file}",
                // Specify *.lib files for linker
                // Specify multiple files in separate lines after first /link parameter
                "/link ${workspaceFolder}\\lib\\SDL2-2.30.0\\lib\\x86\\SDL2main.lib",
                "${workspaceFolder}\\lib\\SDL2-2.30.0\\lib\\x86\\SDL2.lib",
                "${workspaceFolder}\\lib\\SDL2_image-2.8.2\\lib\\x86\\SDL2_image.lib",
                // Define subsystem, otherwise you'll get error about missing main
                "/subsystem:console",
                // Add any sytem libs or other needed libs. If no shell32.lib compile will fail
                "shell32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}